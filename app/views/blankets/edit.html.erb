<h1>Edit blanket info</h1>

<%= form_for @blanket do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, :required => "required" %>
  </div>
  <div>
    <%= f.label :photo %>
    <%= f.text_field :photo %>
  </div>
  <div>
    <%= f.label :blanket_type %>
    <%= f.text_field :blanket_type %>
  </div>
  <div>
    <%= f.label :brand %>
    <%= f.text_field :brand %>
  </div>
  <div>
    <%= f.label :colour %>
    <%= f.text_field :colour %>
  </div>
  <div>
    <%= f.label :trim %>
    <%= f.text_field :trim %>
  </div>
  <div>
    <%= f.label :status %>
    <%= f.text_field :status %>
  </div>
  <div>
    <%= f.label :note %>
    <%= f.text_field :note %>
  </div>

    <%= f.submit "Save" %>

<% end %>
