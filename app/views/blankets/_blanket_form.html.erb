<%= form_for @blanket do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, :required => "required" %>
  </div>
  <div>
    <%= f.label :photo %>
    <%= f.text_field :photo %>
  </div>
  <div>
    <%= f.label :blanket_type %>
    <%= f.collection_select(:blanket_type_id, BlanketType.all, :id, :blanket_type,{prompt: "Select type"}) %>
  </div>
  <div>
    <%= f.label :brand %>
    <%= f.text_field :brand %>
  </div>
  <div>
    <%= f.label :size %>
    <%= f.text_field :size %>
  </div>
  <div>
    <%= f.label :colour %>
    <%= f.text_field :colour %>
  </div>
  <div>
    <%= f.label :trim %>
    <%= f.text_field :trim %>
  </div>
  <div>
    <%= f.label :status %>
    <%= f.collection_check_boxes(:status_ids, Status.all, :id, :name) do |status| %>
      <div>
        <%= status.check_box %>
        <%= status.label %>
      </div>
    <% end %>
  </div>
  <div>
    <%= f.label :note %>
    <%= f.text_area :note %>
  </div>

    <%= f.submit "Save" %>

<% end %>
